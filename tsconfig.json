{
  "compilerOptions": {
    /* Base Options */
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,

    /* Strictness */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
