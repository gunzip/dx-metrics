{
  "name": "Metrics Dev Container",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": ".."
  },
  "forwardPorts": [9193, 9033],
  "portsAttributes": {
    "9193": {
      "label": "Steampipe Dashboard",
      "onAutoForward": "notify"
    },
    "9033": {
      "label": "Powerpipe Dashboard",
      "onAutoForward": "notify"
    }
  },
  "postCreateCommand": "echo 'Dev container is ready!'",
  "remoteUser": "appuser",
  "workspaceFolder": "/app",
  "containerEnv": {
    "GITHUB_TOKEN": "${localEnv:GITHUB_TOKEN}",
    "STEAMPIPE_LOG": "info"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "github.vscode-github-actions",
        "github.vscode-pull-request-github",
        "esbenp.prettier-vscode",
        "EditorConfig.EditorConfig",
        "redhat.vscode-yaml",
        "dbaeumer.vscode-eslint",
        "github.copilot",
        "github.copilot-chat",
        "ms-vscode.vscode-json",
        "ms-python.python"
      ],

      "mcp": {
        "servers": {
          "playwright": {
            "command": "npx",
            "args": ["@playwright/mcp@latest"],
            "type": "stdio"
          },
          "dx-docs": {
            "url": "https://api.dev.dx.pagopa.it/mcp",
            "type": "http",
            "headers": {
              "x-gh-pat": "${localEnv:GITHUB_TOKEN}"
            }
          }
        }
      },

      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      }
    }
  }
}
